{% extends 'base.html.twig' %}
{% block body %}
    {% include 'components/navbar.html.twig' %}
    <div class="row px-2">
        <div class="col-12 col-lg-6 mx-auto">
            <div class="card h-100 border-danger mt-2 mt-lg-5">
                <div class="card-header border-danger">
                    <h1 class="card-title text-danger h1">Error</h1>
                </div>
                <div class="card-body border-danger">
                    <h3 class="card-title text-danger text-center h2">{{ exception.message }}</h3>
                    <h5 class="card-title text-danger text-center h3">Details</h5>
                    <hr class="border-danger"/>
                    <div class="row mt-2 fs-4">
                        <div class="col-12 col-lg-3 text-start">Code:</div>
                        <div class="col-12 col-lg-9 text-end"><code>{{ exception.code }}</code></div>
                    </div>
                    {% if app.environment != 'prod' %}
                        <div class="row mt-2 fs-4">
                            <div class="col-12 col-lg-3 text-start">File:</div>
                            <div class="col-12 col-lg-9 text-end"><code>{{ exception.file }}: {{ exception.line }}</code></div>
                        </div>
                        <h3 class="mt-4 fs-2">Trace:</h3>
                        <div class="mt-3"><code><pre>{{ exception.traceAsString }}</pre></code></div>
                        <div></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
